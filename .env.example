# QuantaPilotâ„¢ Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# General Configuration
# ==============================================
NODE_ENV=development
LOG_LEVEL=info

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=quantapilot
POSTGRES_PASSWORD=quantapilot_secure_password_change_me
POSTGRES_DB=quantapilot
DATABASE_URL=postgresql://quantapilot:quantapilot_secure_password_change_me@postgres:5432/quantapilot

# n8n Database Configuration
N8N_POSTGRES_USER=n8n
N8N_POSTGRES_PASSWORD=n8n_secure_password_change_me

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# API Gateway Configuration
# ==============================================
API_PORT=3000
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_change_me
API_RATE_LIMIT=1000
CORS_ORIGIN=http://localhost:3001,http://localhost:3004

# ==============================================
# n8n Configuration
# ==============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123!
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ==============================================
# AI Integration (Cursor)
# ==============================================
CURSOR_API_KEY=your_cursor_api_key_here
CURSOR_API_URL=https://api.cursor.sh/v1
CURSOR_MODEL=cursor-large
CURSOR_MAX_TOKENS=4000
CURSOR_TIMEOUT=120000

# ==============================================
# GitHub Integration
# ==============================================
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_API_URL=https://api.github.com

# ==============================================
# Notification Services
# ==============================================
# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@quantapilot.com

# ==============================================
# Monitoring Configuration
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3005
GRAFANA_ADMIN_PASSWORD=admin123

# ==============================================
# Development/Debugging
# ==============================================
# Set to true to enable additional debug logging
DEBUG_MODE=false

# Set to true to enable SQL query logging
DEBUG_SQL=false

# Set to true to enable webhook debugging
DEBUG_WEBHOOKS=false

# ==============================================
# Security Configuration
# ==============================================
# Rate limiting per IP per hour
GLOBAL_RATE_LIMIT=10000

# Session timeout in hours
SESSION_TIMEOUT=24

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=50

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable specific features
ENABLE_TELEMETRY=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_UPDATES=false

# ==============================================
# External Service URLs (for Docker network)
# ==============================================
# These are used for internal service communication
INTERNAL_API_GATEWAY_URL=http://api-gateway:3000
INTERNAL_CURSOR_SERVICE_URL=http://cursor-service:3001
INTERNAL_GITHUB_SERVICE_URL=http://github-service:3002
INTERNAL_NOTIFICATION_SERVICE_URL=http://notification-service:3003
INTERNAL_N8N_URL=http://n8n:5678