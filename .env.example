# QuantaPilotâ„¢ Environment Configuration
# Copy this file to .env and update with your actual values

# ==============================================
# n8n Configuration
# ==============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123!
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# n8n Database Connection
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=postgres
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_USER=n8n
N8N_DB_POSTGRESDB_PASSWORD=n8n_password

# n8n Webhook URL
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL=postgresql://quantapilot:quantapilot_password@postgres:5432/quantapilot
POSTGRES_USER=quantapilot
POSTGRES_PASSWORD=quantapilot_password
POSTGRES_DB=quantapilot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# n8n Database (separate from main app database)
N8N_POSTGRES_USER=n8n
N8N_POSTGRES_PASSWORD=n8n_password
N8N_POSTGRES_DB=n8n

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# AI Integration (Cursor)
# ==============================================
CURSOR_API_KEY=your_cursor_api_key_here
CURSOR_API_URL=https://api.cursor.sh/v1
CURSOR_MODEL=cursor-large
CURSOR_MAX_TOKENS=4000
CURSOR_TEMPERATURE=0.1

# Token Budget Limits
DEFAULT_TOKEN_BUDGET=50000
MAX_TOKEN_BUDGET=100000
COST_PER_TOKEN=0.0001

# ==============================================
# GitHub Integration
# ==============================================
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret_key
GITHUB_API_URL=https://api.github.com
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=

# ==============================================
# Telegram Integration
# ==============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram
TELEGRAM_WEBHOOK_SECRET=your_telegram_webhook_secret

# ==============================================
# Email Configuration
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@quantapilot.com
EMAIL_FROM_NAME=QuantaPilot

# ==============================================
# API Gateway Configuration
# ==============================================
API_PORT=3000
API_HOST=0.0.0.0
JWT_SECRET=your_super_secret_jwt_key_here
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# ==============================================
# Application Configuration
# ==============================================
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3001
SESSION_SECRET=your_session_secret_here

# ==============================================
# Security Configuration
# ==============================================
ENCRYPTION_KEY=your_32_character_encryption_key
WEBHOOK_SIGNATURE_SECRET=your_webhook_signature_secret
BCRYPT_ROUNDS=12

# ==============================================
# Monitoring & Observability
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123
LOG_FORMAT=json
ENABLE_METRICS=true

# ==============================================
# File Storage Configuration
# ==============================================
STORAGE_TYPE=local
STORAGE_PATH=./storage
BACKUP_PATH=./backups
MAX_FILE_SIZE=10485760

# ==============================================
# Workflow Configuration
# ==============================================
MAX_CONCURRENT_PROJECTS=10
PROJECT_TIMEOUT=14400
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_RETRY_DELAY=30

# ==============================================
# Feature Flags
# ==============================================
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=false
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false

# ==============================================
# External Services
# ==============================================
WEBHOOK_TIMEOUT=30
HTTP_TIMEOUT=60
MAX_RETRIES=3
RETRY_DELAY=1000

# ==============================================
# Development Configuration
# ==============================================
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=false
MOCK_EXTERNAL_APIS=false
