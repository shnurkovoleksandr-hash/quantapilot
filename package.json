{
  "name": "quantapilot",
  "version": "1.0.0",
  "description": "Autonomous project factory powered by n8n workflows and Cursor AI",
  "keywords": [
    "ai",
    "automation",
    "development",
    "n8n",
    "cursor",
    "factory",
    "workflow"
  ],
  "homepage": "https://github.com/your-org/quantapilot#readme",
  "bugs": {
    "url": "https://github.com/your-org/quantapilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/quantapilot.git"
  },
  "license": "MIT",
  "author": {
    "name": "QuantaPilot Team",
    "email": "team@quantapilot.com"
  },
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "build": "docker-compose build",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "cypress run",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:lint": "markdownlint docs/**/*.md && markdownlint README.md CONTRIBUTING.md CHANGELOG.md",
    "docs:validate-cursor-rules": "./scripts/validate-cursor-rules.sh",
    "health-check": "./scripts/health-check.sh",
    "backup": "./scripts/backup-system.sh",
    "restore": "./scripts/restore-system.sh",
    "setup": "./scripts/setup.sh",
    "validate-config": "./scripts/validate-config.sh",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "knex migrate:rollback:all && knex migrate:latest && knex seed:run",
    "security:scan": "npm audit && docker-compose run --rm security-scanner",
    "monitoring:up": "docker-compose --profile monitoring up -d",
    "monitoring:down": "docker-compose --profile monitoring down",
    "clean": "docker-compose down -v && docker system prune -f",
    "release": "standard-version",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cypress": "^13.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^14.0.0",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.0",
    "vitepress": "^1.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "docker": ">=20.10.0",
    "docker-compose": ">=2.0.0"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "packageManager": "pnpm@9.0.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "services/**/*.{js,ts}",
      "!services/**/node_modules/**",
      "!services/**/coverage/**",
      "!services/**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "config": {
    "quantapilot": {
      "version": "1.0.0",
      "supportedNodeVersions": ">=18.0.0",
      "supportedDockerVersions": ">=20.10.0"
    }
  }
}
